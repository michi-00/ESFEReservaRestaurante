<Window x:Class="ESFE.ReservaRestaurante.CRUDMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESFE.ReservaRestaurante"
        mc:Ignorable="d"
        Title="CRUDMenu" Height="777" Width="1468">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/menu.png"/>
        </Grid.Background>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="36" Margin="180,183,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="44"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="60" Margin="324,216,0,0" TextWrapping="Wrap" Text="Ingrese el nombre del menú" VerticalAlignment="Top" Width="240"/>
        <TextBox x:Name="txtPrecio" HorizontalAlignment="Left" Height="60" Margin="651,216,0,0" TextWrapping="Wrap" Text="Ingrese el precio del menú" VerticalAlignment="Top" Width="243"/>
        <TextBox x:Name="txtDescripcion" HorizontalAlignment="Left" Height="60" Margin="993,216,0,0" TextWrapping="Wrap" Text="Ingrese la descripción del menú " VerticalAlignment="Top" Width="237"/>
        <Button x:Name="btnGuardar" Content="GUARDAR" HorizontalAlignment="Left" Height="62" Margin="324,319,0,0" VerticalAlignment="Top" Width="240"/>
        <Button x:Name="btnEliminar" Content="ELIMINAR" HorizontalAlignment="Left" Height="62" Margin="681,319,0,0" VerticalAlignment="Top" Width="213"/>
        <Button x:Name="btnModificar" Content="MODIFICAR" HorizontalAlignment="Left" Height="62" Margin="993,319,0,0" VerticalAlignment="Top" Width="207"/>
        <DataGrid HorizontalAlignment="Center" Height="288" Margin="0,463,0,0" VerticalAlignment="Top" Width="1448" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
