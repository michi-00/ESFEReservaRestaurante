<Window x:Class="ESFE.ReservaRestaurante.CRUDCobro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESFE.ReservaRestaurante"
        mc:Ignorable="d"
        Title="CRUDCobro" Height="777" Width="1468">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/cobro.png"/>
        </Grid.Background>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="35" Margin="54,165,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="txtMontoTotal" HorizontalAlignment="Left" Height="45" Margin="449,204,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="219"/>
        <TextBox x:Name="txtMetodoPago" HorizontalAlignment="Left" Height="45" Margin="775,204,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="220"/>
        <TextBox x:Name="txtIdReserva" HorizontalAlignment="Left" Height="45" Margin="1115,204,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="267"/>
        <Label x:Name="lblFecha" Content="Ingrese la fecha del cobro" HorizontalAlignment="Left" Height="45" Margin="188,204,0,0" VerticalAlignment="Top" Width="200" Background="#FFECDFDF"/>
        <Calendar HorizontalAlignment="Left" Height="155" Margin="188,249,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="btnGuardar" Content="GUARDAR" HorizontalAlignment="Left" Height="75" Margin="504,338,0,0" VerticalAlignment="Top" Width="234"/>
        <Button x:Name="btnEliminar" Content="ELIMINAR" HorizontalAlignment="Left" Height="75" Margin="830,338,0,0" VerticalAlignment="Top" Width="220"/>
        <Button x:Name="btnModificar" Content="MODIFICAR" HorizontalAlignment="Left" Height="75" Margin="1132,338,0,0" VerticalAlignment="Top" Width="234"/>
        <DataGrid HorizontalAlignment="Left" Height="270" Margin="57,452,0,0" VerticalAlignment="Top" Width="1361" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
