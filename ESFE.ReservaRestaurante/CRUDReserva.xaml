<Window x:Class="ESFE.ReservaRestaurante.CRUDReserva"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESFE.ReservaRestaurante"
        mc:Ignorable="d"
        Title="CRUDReserva" Height="777" Width="1468">
    <Grid Margin="0,0,0,-16">
        <Grid.Background>
            <ImageBrush ImageSource="/crud.png"/>
        </Grid.Background>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Margin="92,143,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="39" Height="31" Text="ID"/>
        <TextBox
        Width="186" VerticalAlignment="Top" TextWrapping="Wrap" x:Name="txtNumero" Margin="678,176,0,0" Height="28" HorizontalAlignment="Left" Text="Ingrese el Número de personas "/>

        <TextBox x:Name="txtEstado" HorizontalAlignment="Left" Margin="953,176,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="138" Height="26" RenderTransformOrigin="0.508,0.578" Text="Escriba el estado "/>
        <DataGrid x:Name="dgvMostrarReserva" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="21,437,29,19"/>
        <Button x:Name="btnGuardar" Content="MODIFICAR" HorizontalAlignment="Left" VerticalAlignment="Top" Height="40" Width="116" Margin="596,374,0,0"/>
        <Button x:Name="btnModificar" Content="ELIMINAR" HorizontalAlignment="Left" Margin="839,374,0,0" VerticalAlignment="Top" Height="40" Width="142"/>
        <Button x:Name="btnEliminar" Content="GUARDAR" HorizontalAlignment="Left" Height="40" Margin="278,374,0,0" VerticalAlignment="Top" Width="136"/>
        <Calendar HorizontalAlignment="Left" Margin="222,210,0,0" VerticalAlignment="Top" Height="150" Width="174"/>
        <Label x:Name="lblFecha" Content="Selecciones la fecha " HorizontalAlignment="Left" Margin="222,173,0,0" VerticalAlignment="Top" Width="192"/>
        <Label x:Name="lblHora" Content="Selecciones la Hora" HorizontalAlignment="Left" Margin="496,176,0,0" VerticalAlignment="Top" Width="132"/>

    </Grid>
</Window>
