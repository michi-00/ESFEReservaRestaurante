<Window x:Class="ESFE.ReservaRestaurante.CRUDCobro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESFE.ReservaRestaurante"
        mc:Ignorable="d"
        Title="CRUDCobro" Height="777" Width="1468">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/cobro.png"/>
        </Grid.Background>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="35" Margin="54,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="60"/>
        <TextBox x:Name="txtMontoTotal" HorizontalAlignment="Left" Height="45" Margin="448,268,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="243"/>
        <TextBox x:Name="txtMetodoPago" HorizontalAlignment="Left" Height="46" Margin="773,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="220"/>
        <TextBox x:Name="txtIdReserva" HorizontalAlignment="Left" Height="46" Margin="1099,266,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="199"/>
        <Label x:Name="lblFecha" Content="Ingrese la fecha del cobro" HorizontalAlignment="Left" Height="39" Margin="188,204,0,0" VerticalAlignment="Top" Width="209" Background="#FFECDFDF" Foreground="#FF0E0303" FontFamily="Arial Black" FontSize="14"/>
        <Button x:Name="btnGuardar" Content="GUARDAR" HorizontalAlignment="Left" Height="75" Margin="336,0,0,0" VerticalAlignment="Center" Width="234" FontFamily="Algerian" FontSize="22" Foreground="Black">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFA43790" Offset="0.828"/>
                    <GradientStop Color="#FFEF7ADA" Offset="0.131"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="Black"/>
                    <GradientStop Color="White" Offset="1"/>
                </LinearGradientBrush>
            </Button.BorderBrush>
        </Button>
        <Button x:Name="btnEliminar" Content="ELIMINAR" HorizontalAlignment="Left" Height="75" Margin="644,0,0,0" VerticalAlignment="Center" Width="220" FontFamily="Algerian" FontSize="22">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFE872D3"/>
                    <GradientStop Color="#FFA43790" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="btnModificar" Content="MODIFICAR" HorizontalAlignment="Left" Height="75" Margin="946,0,0,0" VerticalAlignment="Center" Width="234" FontFamily="Algerian" FontSize="22">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF822D73" Offset="1"/>
                    <GradientStop Color="#FFE872D3" Offset="1"/>
                    <GradientStop Color="#FFE36ECE" Offset="0.134"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <DataGrid x:Name="dgMostrarCobro" HorizontalAlignment="Left" Height="270" Margin="57,452,0,0" VerticalAlignment="Top" Width="1361" d:ItemsSource="{d:SampleData ItemCount=5}">
            <DataGrid.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFDB98E6" Offset="0.946"/>
                    <GradientStop Color="#FFFBF39E" Offset="0.226"/>
                </LinearGradientBrush>
            </DataGrid.Background>
        </DataGrid>
        <DatePicker x:Name="dateFecha" HorizontalAlignment="Left" Height="48" Margin="188,265,0,0" VerticalAlignment="Top" Width="200"/>
        <Label x:Name="lblMontoTotal" Content="Ingrese el monto total a pagar" HorizontalAlignment="Left" Height="39" Margin="448,204,0,0" VerticalAlignment="Top" Width="243" Background="#FFECDFDF" Foreground="#FF210606" FontFamily="Arial Black" FontSize="14"/>
        <Label x:Name="lblMetodoPago" Content="Ingrese el método de pago" HorizontalAlignment="Left" Height="39" Margin="773,204,0,0" VerticalAlignment="Top" Width="220" Background="#FFECDFDF" Foreground="#FF190707" FontFamily="Arial Black" FontSize="14"/>
        <Label x:Name="lblFecha_Copiar" Content="Ingrese el ID del lugar" HorizontalAlignment="Left" Height="39" Margin="1099,204,0,0" VerticalAlignment="Top" Width="199" Background="#FFECDFDF" FontFamily="Arial Black" FontSize="14"/>
        <Label x:Name="lblFecha_Copiar1" Content="ID" HorizontalAlignment="Left" Height="30" Margin="54,130,0,0" VerticalAlignment="Top" Width="40" Background="#FFECDFDF" FontFamily="Arial Black" FontSize="16"/>

    </Grid>
</Window>
