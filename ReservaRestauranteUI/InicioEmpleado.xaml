<Window x:Class="ESFE.ReservaRestaurante.InicioEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESFE.ReservaRestaurante"
        mc:Ignorable="d"
        Title="InicioEmpleado" Height="800" Width="1468">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/Inicio.png"/>
        </Grid.Background>

        <Label Content="Bienvenido Empleado" HorizontalAlignment="Center" Height="177" Margin="0,321,0,0" VerticalAlignment="Top" Width="1074" FontSize="72" FontFamily="Cooper Black"/>
        <DockPanel HorizontalAlignment="Left" Height="90" LastChildFill="False" VerticalAlignment="Top" Width="1146">
            <DockPanel.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF792071"/>
                    <GradientStop Color="#FF98B3F5" Offset="1"/>
                </LinearGradientBrush>
            </DockPanel.Background>
        </DockPanel>
        <Button x:Name="btnCliente" Content="Cliente" HorizontalAlignment="Left" Height="90" VerticalAlignment="Top" Width="162" Foreground="White" Background="#FFF194DD" Click="btnCliemte" Margin="35,0,0,0" RenderTransformOrigin="-0.216,-1.2"/>
        <Button x:Name="btnCobro" Content="Cobro" HorizontalAlignment="Left" Height="90" Margin="590,0,0,0" VerticalAlignment="Top" Width="172" Background="#FFF392F3" Click="btnCobro_Click"/>
        <Button x:Name="btnLugar" Content="Lugar" HorizontalAlignment="Left" Height="90" Margin="230,0,0,0" VerticalAlignment="Top" Width="146" Background="#FFF392F3" Click="btnLugar_Click"/>
        <Button x:Name="btnMesa" Content="Mesa" HorizontalAlignment="Left" Height="90" Margin="967,0,0,0" VerticalAlignment="Top" Width="164" Background="#FFF392F3" Click="btnMesa_Click"/>
        <Button x:Name="btnReserva" Content="Reserva" HorizontalAlignment="Left" Height="90" Margin="394,0,0,0" VerticalAlignment="Top" Width="177" Background="#FFF392F3" Click="btnReserva_Click"/>
        <Button x:Name="btnMenu" Content="Menu" HorizontalAlignment="Left" Height="90" Margin="788,0,0,0" VerticalAlignment="Top" Width="158" Background="#FFF392F3" Click="btnMenu_Click"/>

    </Grid>
</Window>
