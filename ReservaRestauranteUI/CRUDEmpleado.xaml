<Window x:Class="ESFE.ReservaRestaurante.CRUDEmpleado"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ESFE.ReservaRestaurante"
        mc:Ignorable="d"
        Title="CRUDEmpleado" Height="777" Width="1468">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/employee.png"/>
        </Grid.Background>
        <TextBox x:Name="txtID" HorizontalAlignment="Left" Height="33" Margin="117,206,0,0" TextWrapping="Wrap" Text="ID" VerticalAlignment="Top" Width="49"/>
        <TextBox x:Name="txtNombre" HorizontalAlignment="Left" Height="44" Margin="234,242,0,0" TextWrapping="Wrap" Text="Ingrese su nombre" VerticalAlignment="Top" Width="181"/>
        <TextBox x:Name="txtContraseña" HorizontalAlignment="Left" Height="44" Margin="496,242,0,0" TextWrapping="Wrap" Text="Ingrese su contraseña" VerticalAlignment="Top" Width="178"/>
        <TextBox x:Name="txtDireccion" HorizontalAlignment="Left" Height="44" Margin="734,242,0,0" TextWrapping="Wrap" Text="Ingrese su dirección" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="txtIdRol" HorizontalAlignment="Left" Height="44" Margin="969,242,0,0" TextWrapping="Wrap" Text="Ingrese su ID de rol" VerticalAlignment="Top" Width="139"/>
        <Button x:Name="btnGuardar" Content="GUARDAR" HorizontalAlignment="Left" Height="64" Margin="204,340,0,0" VerticalAlignment="Top" Width="211"/>
        <Button x:Name="btnEliminar" Content="ELIMINAR" HorizontalAlignment="Left" Height="64" Margin="585,340,0,0" VerticalAlignment="Top" Width="202"/>
        <Button x:Name="btnModificar" Content="MODIFICAR" HorizontalAlignment="Left" Height="64" Margin="909,340,0,0" VerticalAlignment="Top" Width="199"/>
        <DataGrid HorizontalAlignment="Left" Height="292" Margin="28,440,0,0" VerticalAlignment="Top" Width="1396" d:ItemsSource="{d:SampleData ItemCount=5}"/>

    </Grid>
</Window>
